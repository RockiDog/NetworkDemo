<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/ipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/init_ip"
        android:inputType="text"
        android:ems="10" />

    <EditText
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipText"
        android:layout_below="@+id/ipText"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:ems="10" />

    <Button
        android:id="@+id/connectBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ipText"
        android:layout_alignTop="@+id/ipText"
        android:layout_toRightOf="@+id/ipText"
        android:onClick="onConnectClick"
        android:text="@string/button_connect" />

    <Button
        android:id="@+id/sendBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contentText"
        android:layout_alignRight="@+id/connectBtn"
        android:layout_alignTop="@+id/contentText"
        android:layout_toRightOf="@+id/contentText"
        android:text="@string/button_send"
        android:onClick="onSendClick" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/button_start"
        android:onClick="onStartClick" />

</RelativeLayout>
